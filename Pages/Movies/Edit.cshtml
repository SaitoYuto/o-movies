@page "{id:int?}"
@model             EditModel

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body text-dark">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Movie.Id" />
                        
                        <div class="mb-3">
                            <i class="bi bi-asterisk text-danger"></i>
                            <label asp-for="Movie.Title" class="form-label"></label>
                            <input asp-for="Movie.Title" class="form-control" />
                            <span asp-validation-for="Movie.Title" class="text-danger"></span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <i class="bi bi-asterisk text-danger"></i>
                                <label asp-for="Movie.ReleaseDate" class="form-label"></label>
                                <input asp-for="Movie.ReleaseDate" class="form-control" type="date" />
                                <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <i class="bi bi-asterisk text-danger"></i>
                                <label asp-for="Movie.Genre" class="form-label"></label>
                                <input asp-for="Movie.Genre" class="form-control" />
                                <span asp-validation-for="Movie.Genre" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <i class="bi bi-asterisk text-danger"></i>
                                <label asp-for="Movie.Price" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Movie.Price" class="form-control" type="number" step="0.01" min="1" />
                                </div>
                                <span asp-validation-for="Movie.Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <i class="bi bi-asterisk text-danger"></i>
                                <label asp-for="Movie.Rating" class="form-label"></label>
                                <input asp-for="Movie.Rating" class="form-control" />
                                <span asp-validation-for="Movie.Rating" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Movie.Director" class="form-label"></label>
                            <input asp-for="Movie.Director" class="form-control" />
                            <span asp-validation-for="Movie.Director" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Movie.MainCast" class="form-label"></label>
                            <input asp-for="Movie.MainCast" class="form-control" />
                            <span asp-validation-for="Movie.MainCast" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Movie.Synopsis" class="form-label"></label>
                            <textarea asp-for="Movie.Synopsis" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Movie.Synopsis" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Movie.PosterImageFile" class="form-label">Update Poster Image</label>
                            <input type="file" asp-for="Movie.PosterImageFile" class="form-control" accept="image/*"/>
                            <span asp-validation-for="Movie.PosterImageFile" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Current Poster</h5>
                    <img src="@Model.Movie.PosterImageUrl" alt="Current Poster" class="img-fluid rounded mb-3" />
                    <p class="text-muted small">To update the poster, select a new image file above.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}