@page
@model OMovies.Areas.Admin.Pages.UserModel
@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h2 class="mb-4">User Management</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Email</th>
                            <th>User Name</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userWithRoles in Model.UsersWithRoles)
                        {
                            <tr>
                                <td>@userWithRoles.User.Email</td>
                                <td>@userWithRoles.User.UserName</td>
                                <td>
                                    @foreach (var role in userWithRoles.Roles)
                                    {
                                        <span class="badge bg-secondary me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="./EditUser" asp-route-id="@userWithRoles.User.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-page="./DeleteUser" asp-route-id="@userWithRoles.User.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>